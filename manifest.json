{
  "manifest_version": 3,
  "name": "Casper",
  "version": "1.0",
  "description": "Your best friend Casper!",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["contentScript.js"],
      "css": ["casper.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["casper.gif"],
      "matches": ["<all_urls>"]
    }
  ]
}
